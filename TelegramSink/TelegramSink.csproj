<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
	  <TargetFramework>net6.0</TargetFramework>
    <Version>0.1.2</Version>
    <Company />
    <PackageId>Serilog.Sinks.Telegram</PackageId>
    <Authors>Carlo Zamagni</Authors>
    <Product>TeleSink</Product>
    <PackageTags>telegram, serilog, sink, logging, log</PackageTags>
    <Description>Telegram sink for Serilog</Description>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/carlozamagni/serilog-sinks-telegram</PackageProjectUrl>
    <RepositoryUrl>github.com/carlozamagni/serilog-sinks-telegram.git</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <ApplicationIcon />
    <StartupObject />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Flurl" Version="2.7.1" />
    <PackageReference Include="Flurl.Http" Version="2.3.2" />
    <PackageReference Include="Serilog" Version="2.7.1" />
  </ItemGroup>

</Project>
